%div.formStyle
  %table#tablaResultado

    %thead
      %tr
        %th Name
        %th Email
        %th Password
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= user.password
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Admin', defineAdminRole_user_path(user)
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
      - @userfbs.each do |userfb|
        %tr
          %td= userfb.name
          %td= 'Facebook User'
          %td
          %td= link_to 'Show', userfb
          %td
          %td= link_to 'Admin', defineAdminRole_userfb_path(userfb)
          %td= link_to 'Destroy', userfb, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br


