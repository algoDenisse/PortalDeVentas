%br
%div.formStyle
  %table#tablaResultado
    %thead
      %tr
        %th Name
        %th Price
        %th Likes
        %th Description
        %th Status
        %th 
        %th

    %tbody
      %div
        - @articles.each do |article|
          %tr
          %td= article.name
          %td= article.price
          %td= article.likes
          %td= article.description
          %td= article.state
          %td
          -if current_user
            -if current_user.id == article.imageable.id
              %td= link_to 'Show', article
              %td= link_to 'Notifications', article_notifications_path(article)
              %td= link_to 'Edit', edit_article_path(article)
              %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }